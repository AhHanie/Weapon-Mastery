<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Anomaly</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class ="PatchOperationAddModExtension" MayRequire="ludeon.rimworld.anomaly">
					<xpath>Defs/ThingDef[defName="Gun_HellcatRifle"]</xpath>
					<value>
						<li Class="SK_WeaponMastery.DefModExtension_Mastery">
							<gmclass>Rifle</gmclass>
						</li>
					</value>
				</li>
				<li Class ="PatchOperationAddModExtension" MayRequire="ludeon.rimworld.anomaly">
					<xpath>Defs/ThingDef[defName="NerveSpiker"]</xpath>
					<value>
						<li Class="SK_WeaponMastery.DefModExtension_Mastery">
							<gmclass>Crossbow</gmclass>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>